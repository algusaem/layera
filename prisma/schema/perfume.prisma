model Perfume {
  id        String   @id @default(cuid())
  name      String
  brand     String
  imageUrl  String? // URL to image (recommend storing in Cloudinary/S3/Vercel Blob)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userPerfumes  UserPerfume[]
  layerPerfumes LayerPerfume[]

  @@unique([name, brand]) // Prevent duplicate perfume entries
  @@map("perfumes")
}

model UserPerfume {
  id        String   @id @default(cuid())
  userId    String
  perfumeId String
  notes     String?  // Optional personal notes about this perfume
  addedAt   DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  perfume Perfume @relation(fields: [perfumeId], references: [id], onDelete: Cascade)

  @@unique([userId, perfumeId]) // User can only save a perfume once
  @@map("user_perfumes")
}
